{
    "name": "@senate/refresher",
    "version": "1.0.0",
    "description": "This service takes care of keeping proposals and votes up to date",
    "author": "Senate",
    "private": true,
    "license": "MIT",
    "main": "./dist/index",
    "typings": "./dist/index",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "build:refresher": "tsup",
        "start": "node dist/index.js",
        "start:refresher": "node dist/index.js",
        "dev": "tsup && node dist/index.js",
        "dev:refresher": "tsup && node dist/index.js",
        "clean": "rimraf .turbo node_modules dist",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "prettier": "prettier src --check",
        "prettier:fix": "prettier src --write"
    },
    "dependencies": {
        "@senate/axiom": "*",
        "@senate/config": "*",
        "@senate/database": "*",
        "node-cron": "^3.0.2",
        "superagent": "^8.0.6"
    },
    "devDependencies": {
        "@types/node-cron": "^3.0.7",
        "tsup": "^6.5.0",
        "typescript": "^4.9.4"
    },
    "engines": {
        "node": "16"
    },
    "packageManager": "yarn@1.22.19"
}
