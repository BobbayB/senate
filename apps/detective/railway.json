{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "yarn build:detective",
        "watchPatterns": ["apps/detective", "packages/**"]
    },
    "deploy": {
        "startCommand": "yarn start:detective",
        "restartPolicyType": "ALWAYS",
        "restartPolicyMaxRetries": 10
    }
}
