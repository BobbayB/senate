{
  "name": "senate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn workspaces foreach -ip -t -j unlimited run dev",
    "web": "yarn workspace webapp dev",
    "build": "yarn workspaces foreach -ip -j unlimited run build",
    "start": "yarn workspaces foreach -ip -j unlimited run start"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} ./prisma/seed.ts",
    "schema": "./prisma/schema.prisma"
  },
  "workspaces": [
    "webapp",
    "services/proposal-detective",
    "services/notifications-orchestrator",
    "services/bot-discord",
    "services/bot-slack"
  ],
  "devDependencies": {
    "foreach": "^2.0.6"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "yarn": "^1.22.19"
  }
}
