{
  "name": "senate",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "start:web": "turbo run start:web",
    "start:detective": "turbo run start:detective",
    "start:refresher": "turbo run start:refresher",
    "start:roundup": "turbo run start:roundup",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev:web",
    "dev:detective": "turbo run dev:detective",
    "dev:refresher": "turbo run dev:refresher",
    "dev:roundup": "turbo run dev:roundup",
    "test:web": "turbo run test:web",
    "test:e2e": "turbo run test:e2e",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "refresher:start": "turbo run refresher:start",
    "refresher:dev": "turbo run refresher:dev",
    "generate": "turbo run generate",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "chromatic": "turbo run chromatic",
    "clean": "turbo run clean",
    "prettier": "turbo run prettier",
    "prettier:fix": "turbo run prettier:fix",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix"
  },
  "devDependencies": {
    "prettier": "^2.8.0",
    "tsx": "^3.12.1",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.19"
}
