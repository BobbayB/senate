{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "db:migrate:deploy": {
      "outputs": []
    },
    "db:push": {
      "outputs": []
    },
    "db:seed": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "lint": {
      "dependsOn": [
        "$NODE_ENV",
        "$NEXTAUTH_SECRET",
        "$NEXTAUTH_URL",
        "$VERCEL_URL",
        "$PROVIDER_URL",
        "$PORT"
      ],
      "outputs": []
    }
  }
}
