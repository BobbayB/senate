{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "*": {
      "env": [
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "VERCEL_URL",
        "PROVIDER_URL",
        "PORT",
        "DETECTIVE_URL"
      ]
    },
    "start": {},
    "start:web": {},
    "start:detective": {},
    "start:refresher": {},
    "dev": {},
    "dev:web": {},
    "dev:detective": {},
    "dev:refresher": {},
    "db:migrate:deploy": {},
    "db:push": { "cache": false },
    "db:seed": { "cache": false },
    "refresher:start": {},
    "refresher:dev": {},
    "generate": { "cache": false },
    "lint": { "cache": false },
    "lint:fix": { "cache": false },
    "prettier": { "cache": false },
    "prettier:fix": { "cache": false },
    "storybook": {},
    "build-storybook": {},
    "clean": { "cache": false },
    "chromatic": {}
  }
}
