{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "db:migrate:deploy": {
      "outputs": [],
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "outputs": [],
      "env": ["DATABASE_URL"]
    },
    "db:seed": {
      "outputs": [],
      "env": ["DATABASE_URL"]
    },
    "dev": {
      "cache": false,
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "VERCEL_URL",
        "PROVIDER_URL",
        "PORT"
      ]
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "lint": {
      "outputs": [],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "VERCEL_URL",
        "PROVIDER_URL",
        "PORT"
      ]
    }
  }
}
