{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowJs": true,
        "incremental": true
    },
    "include": ["src", "next-env.d.ts"],
    "exclude": ["node_modules"]
}
